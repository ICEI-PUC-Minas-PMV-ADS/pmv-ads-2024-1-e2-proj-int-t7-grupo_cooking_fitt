@model CookingFit_backend.Models.TipoIngrediente

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover</h1>

<h3>Tem certeza que deseja remover esse grupo de ingrediente?</h3>
<div>
    <h4>TipoIngrediente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <br />
        <br />
        <a asp-action="Index" class="btn btn-info">Voltar</a>
    </form>
</div>
