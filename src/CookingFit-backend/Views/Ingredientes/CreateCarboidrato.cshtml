@model CookingFit_backend.Models.Ingrediente

@{
    ViewData["Title"] = "Criar Carboidrato";
}

<h1>Adicione um item</h1>

<h4>Ingrediente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calorias" class="control-label"></label>
                <input asp-for="Calorias" class="form-control" value= "150" readonly="readonly" />
                <span class="form-text text-muted">Cadastre o equivalente a 150Kcal</span>
                <span asp-validation-for="Calorias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unidade" class="control-label"></label>
                <input asp-for="Unidade" class="form-control" />
                <span asp-validation-for="Unidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <input asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
@* 
            <div class="form-group">
                <label asp-for="Tipo" asp-controller="TipoIngredientes" class="control-label">Tipo de Ingrediente</label>
                <select asp-for="Tipo" asp-controller="TipoIngredientes" class="form-control" asp-items="ViewBag.TipoIngredienteId"></select>
                <span asp-validation-for="Tipo" asp-controller="TipoIngredientes" class="text-danger"></span>
            </div> *@


            <div class="form-group">
                <label asp-for="TipoIngredienteId" class="control-label">Tipo de Ingrediente</label>
                <select asp-for="TipoIngredienteId" class="form-control" asp-items="ViewBag.TipoIngredienteId"></select>
                <span asp-validation-for="TipoIngredienteId" class="text-danger"></span>
            </div>

@*             <div class="form-group">
                <input type="submit" asp-action="List" asp-route-tipo="Carboidratos" value="Adicionar" class="btn btn-success" />
            </div> *@
            <input type="submit" asp-action="CreateCarboidrato" asp-route-tipo="Carboidratos" value="Adicionar" class="btn btn-success" />

        </form>
    </div>
</div>

<p>

    <a asp-action="List" asp-route-tipo="Carboidratos" class="btn btn-primary">Visualizar Carboidratos</a>
    <br />
    <br />
    <a asp-action="Index" class="btn btn-info">Voltar</a>
</p>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}