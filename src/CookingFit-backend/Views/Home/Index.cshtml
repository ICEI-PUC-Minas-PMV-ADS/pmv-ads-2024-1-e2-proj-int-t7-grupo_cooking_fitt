@{
    ViewData["Title"] = "Home Page";
}

<style>
    .home-background {
        background-image: url('/Imagem/Bemvindo.jpeg'); /* Substitua pelo caminho da sua imagem */
        background-size: 100% 110%; /* Faz com que a imagem ocupe toda a largura e altura especificada */
        background-repeat: no-repeat; /* Impede a repetição da imagem */
        background-attachment: local; /* Mantém a imagem fixa ao rolar a página */
        background-position: center; /* Centraliza a imagem de fundo */
        height: 80vh; /* Define a altura como 80% da viewport */
        display: flex; /* Use Flexbox para centralizar o conteúdo */
        justify-content: center; /* Centraliza horizontalmente */
        align-items: center; /* Centraliza verticalmente */
        margin: 0; /* Remove a margem padrão */
        padding: 0; /* Remove o padding padrão */
        text-align: center; /* Centraliza o texto */
        color: white; /* Define a cor do texto como branco para contraste */
    }

    .home-content {
        background-color: rgba(0, 0, 0, 0.5); /* Fundo preto semitransparente para melhor legibilidade */
        padding: 20px;
        border-radius: 10px;
        max-width: 400px;
        width: 100%; /* Garante que o container ocupe 100% da largura até o máximo definido */
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 3rem; /* Aumenta o tamanho da fonte do título */
        font-weight: bold; /* Deixa o texto em negrito */
    }

    p {
        font-size: 1.25rem; /* Aumenta o tamanho da fonte do parágrafo */
    }
</style>

<div class="home-background">
    <div class="home-content">
        <h1 class="display-4"><strong>Cooking Fit</strong></h1>
    </div>
</div>
