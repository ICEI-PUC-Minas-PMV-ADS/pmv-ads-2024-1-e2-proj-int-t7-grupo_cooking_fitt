@model CookingFit_backend.Models.TipoCardapio

@{
    ViewData["Title"] = "Create";
}

<h4>Tipo de refeição</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control" asp-items="ViewBag.Tipos"></select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Selecionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Voltar</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


