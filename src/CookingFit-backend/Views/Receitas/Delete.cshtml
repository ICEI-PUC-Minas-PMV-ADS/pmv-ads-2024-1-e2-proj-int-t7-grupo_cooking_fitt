    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Tem certeza que deseja apagar a receita?</h3>
<div>
    <h4>Receitas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdReceita)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdReceita)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descriçao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descriçao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
